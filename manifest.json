{
    "manifest_version": 2,
    "name": "Block Youtube Shorts",
    "description": "Blocks the Youtube Short buttons and sections on the main page.",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions": ["*://www.youtube.com/*"],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["Content.js"]
        }
    ]
}